<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="ContentFade">
        <animation effect="fade" start="0" end="100" time="500" delay="0">WindowOpen</animation>
        <animation effect="fade" start="100" end="0" time="200" delay="0">WindowClose</animation>
        <animation effect="fade" start="0" end="100" time="500" delay="0">Visible</animation>
        <animation effect="fade" start="100" end="0" time="200" delay="0">Hidden</animation>
    </include>
	
    <include name="VignetteFade">
        <animation effect="fade" start="0" end="100" time="500" delay="0" condition="Window.Previous(home)">Conditional</animation>
        <animation effect="fade" start="100" end="0" time="200" delay="0" condition="Window.Next(home)">Conditional</animation>
    </include>
	
    <include name="VisibleFadeEffect">
        <animation effect="fade" time="200">Visible</animation>
        <animation effect="fade" time="200">Hidden</animation>
    </include>
	
    <include name="VisibleFadeEffectDelay">
        <animation effect="fade" time="300" delay="100">Visible</animation>
        <animation effect="fade" time="0">Hidden</animation>
    </include>
	
    <include name="VisibleFadeEffectDelayShelf">
        <animation effect="fade" time="100">Visible</animation>
        <animation effect="fade" time="50">Hidden</animation>
    </include>
	
    <include name="TVGuideFade">
        <animation effect="fade" time="250" delay="100">Visible</animation>
        <animation effect="fade" time="50">Hidden</animation>
    </include>	
	
    <include name="OSDFade">
        <animation effect="fade" start="0" end="100" time="100">WindowOpen</animation>
        <animation effect="fade" start="100" end="0" time="50">WindowClose</animation>
    </include>
	
    <include name="OpenClose">
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </include>
	
    <include name="DialogOpenClose">
        <animation type="WindowOpen">
            <effect type="fade" start="0" end="100" time="240" />
            <effect type="zoom" tween="cubic" easing="out" start="30" end="100" center="960,540" time="240" />
        </animation>
        <animation type="WindowClose">
            <effect type="fade" start="100" end="0" time="140" />
            <effect type="zoom" tween="cubic" easing="in" start="100" end="30" center="960,540" time="140" />
        </animation>
    </include>
	
