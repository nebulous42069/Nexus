<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<coordinates>
		<posx>810</posx>
		<posy>-30</posy>
	</coordinates>
	<controls>
		<control type="group" description="Content">
			<include>DialogOpenClose</include>
			<control type="image">
				<posx>290</posx>
				<posy>120</posy>
				<width>750</width>
				<height>980</height>
				<texture border="90,0,90,0">dialogs/DialogBG.png</texture>
				<colordiffuse>eeaaaaaa</colordiffuse>
			</control>
			<control type="label">
				<posx>340</posx>
				<posy>155</posy>
				<width>630</width>
				<height>36</height>
				<textcolor>$VAR[HighlightColor]</textcolor>
				<font>InfoTitle</font>
				<align>center</align>
				<label>[B]$INFO[VideoPlayer.ChannelName][/B]</label>
			</control>
			<control type="label">
				<posx>340</posx>
				<posy>195</posy>
				<width>630</width>
				<height>36</height>
				<textcolor>$VAR[HighlightColor]</textcolor>
				<align>center</align>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
			</control>
			<control type="list" id="11">
				<posx>320</posx>
				<posy>240</posy>
				<width>680</width>
				<height>799</height>
				<onleft>close</onleft>
				<onright>60</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="75" width="720">
					<control type="image">
						<width>720</width>
						<height>75</height>
						<texture flipy="true" border="3">list/ListNF.png</texture>
					</control>
					<control type="label">
						<width>120</width>
						<height>75</height>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.StartTime,[B],[/B]]</label>
					</control>
					<control type="image">
						<posx>144</posx>
						<posy>17.5</posy>
						<width>40</width>						
						<height>40</height>
						<align>center</align>
						<aligny>center</aligny>
						<texture>$VAR[PVRStatusImageVar]</texture>
			            <aspectratio>keep</aspectratio>
			            <visible>ListItem.IsRecording | ListItem.HasTimer | ListItem.HasTimerSchedule | ListItem.HasArchive</visible>
					</control>
					<control type="label">
						<posx>195</posx>
						<width>515</width>
						<height>75</height>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.IsRecording | ListItem.HasTimer | ListItem.HasTimerSchedule | ListItem.HasArchive</visible>
					</control>
					<control type="label">
						<posx>144</posx>
						<width>570</width>
						<height>75</height>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
						<visible>![ListItem.IsRecording | ListItem.HasTimer | ListItem.HasTimerSchedule | ListItem.HasArchive]</visible>
					</control>
				</itemlayout>
				<focusedlayout height="75" width="720">
					<control type="image">
						<width>720</width>
						<height>75</height>
						<texture border="4" colordiffuse="$VAR[HighlightColor]">img/WhiteRoundedST2.png</texture>
					</control>
					<control type="label">
						<width>120</width>
						<height>75</height>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>$VAR[FocusedTextColor]</textcolor>
						<shadowcolor></shadowcolor>
						<label>$INFO[ListItem.StartTime,[B],[/B]]</label>
					</control>
					<control type="image">
						<posx>144</posx>
						<posy>17.5</posy>
						<width>40</width>						
						<height>40</height>
						<align>center</align>
						<aligny>center</aligny>
						<texture>$VAR[PVRStatusImageVar]</texture>
			            <aspectratio>keep</aspectratio>
						<colordiffuse>$VAR[FocusedTextColor]</colordiffuse>
			            <visible>ListItem.IsRecording | ListItem.HasTimer | ListItem.HasTimerSchedule | ListItem.HasArchive</visible>
					</control>
					<control type="label">
						<posx>195</posx>
						<width>515</width>
						<height>75</height>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[FocusedTextColor]</textcolor>
						<shadowcolor></shadowcolor>
						<visible>ListItem.IsRecording | ListItem.HasTimer | ListItem.HasTimerSchedule | ListItem.HasArchive</visible>
					</control>
					<control type="label">
						<posx>144</posx>
						<width>570</width>
						<height>75</height>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[FocusedTextColor]</textcolor>
						<shadowcolor></shadowcolor>
						<visible>![ListItem.IsRecording | ListItem.HasTimer | ListItem.HasTimerSchedule | ListItem.HasArchive]</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
				<animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
				<posx>1003</posx>
				<posy>240</posy>
				<width>36</width>
				<height>800</height>
				<onleft>11</onleft>
				<onright>close</onright>
				<ondown>60</ondown>
				<onup>60</onup>
				<texturesliderbackground></texturesliderbackground>
				<texturesliderbar></texturesliderbar>
				<texturesliderbarfocus></texturesliderbarfocus>
				<textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
				<textureslidernibfocus border="18" colordiffuse="$VAR[HighlightColor]">OSD/ScrollbarNibFO.png</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>